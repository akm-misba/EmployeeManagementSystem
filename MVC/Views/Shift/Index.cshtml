@model IEnumerable<MVC.Models.Shift>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ComId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShiftName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShiftIn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShiftOut)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShiftLate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ComId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShiftName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShiftIn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShiftOut)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShiftLate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ShiftId">Edit</a> |
               @*  <a asp-action="Details" asp-route-id="@item.ShiftId">Details</a>  *@|
                <a asp-action="Delete" asp-route-id="@item.ShiftId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
